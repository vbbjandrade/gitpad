---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Share text online with commit history." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/gitpad.svg" type="image/svg+xml" />
		<link rel="icon" href="/gitpad-dark.svg" type="image/svg+xml" media="(prefers-color-scheme: dark)" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#010409]">
		<slot />
	</body>
</html>
<style is:global>
	* {
		color: #e6edf3;
	}
	:root {
		color-scheme: dark;
	}
	html {
		font-family: -apple-system,BlinkMacSystemFont,"Segoe UI","Noto Sans",Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji";
	}
</style>
