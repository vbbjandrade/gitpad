</Layout>
<script>
	const redirectForm = document.getElementById("redirectForm") as HTMLFormElement;
	redirectForm.addEventListener("submit", (e) => {
		e.preventDefault();
		const { slug } = Object.fromEntries(new FormData(redirectForm));
		window.location.assign(`${window.location.origin}/${slug}`);
	})
</script>
